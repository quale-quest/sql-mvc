                "none"
            ],
            "db_create": "yes",
            "url_page": true,
            "serve_port": "3000",
            "debugkey": ""
        },
        "win": {
            "db_create": "yes",
            "monitor_mode": "jit",
            "serve_port": "3000",
            "debugkey": "",
            "db": {
                "database": "demo_db.fdb",
                "username": "sysdba",
                "password": "masterkey",
                "authfile": ""
            }
        },
        "dar": {
            "db_create": "yes",
            "monitor_mode": "jit",
            "serve_port": "3000",
